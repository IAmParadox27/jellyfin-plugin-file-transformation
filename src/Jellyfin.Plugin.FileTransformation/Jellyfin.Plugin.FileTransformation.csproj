<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Jellyfin.Data" Version="10.10.3" />
      <PackageReference Include="Jellyfin.Extensions" Version="10.10.3" />
      <PackageReference Include="Jellyfin.Plugin.Referenceable" Version="1.0.1-alpha.5" OutputItemType="Analyzer" ReferenceOutputAssembly="false" GeneratePathProperty="true" />
    </ItemGroup>

    <Target Name="PostBuild" AfterTargets="Build">
      <Exec Command="xcopy &quot;$(OutDir)$(TargetName).*&quot; &quot;C:\ProgramData\Jellyfin\Server\plugins\File Transformation_1.0.0.0&quot; /y" />
    </Target>

</Project>
